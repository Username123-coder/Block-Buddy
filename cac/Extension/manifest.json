{
    "name": "Block Buddy",
    "description": "Censor web pages. Visit https://cool.loca.lt for functionality",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons": {
        "32": "./images/images.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": 
    [
        "tabs", 
        "storage", 
        "scripting",
        "alarms"
    ],
    "host_permissions": 
    [
        "http://*/*",
        "https://*/*"
    ]
}
